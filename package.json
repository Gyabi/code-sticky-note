{
  "name": "code-sticky-note",
  "displayName": "code-sticky-note",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration":[
      {
        "title": "Code Sticky Note",
        "properties": {
          "code-sticky-note.saveFolderName": {
            "type": "string",
            "default": "code-sticky-note",
            "description": "The folder name to save sticky notes."
          },
          "code-sticky-note.saveFileName": {
            "type": "string",
            "default": "note",
            "description": "The file name to save sticky notes."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "code-sticky-note.init",
        "title": "Initialize"
      },
      {
        "command": "code-sticky-note.open",
        "title": "Open note"
      }
    ],
    "keybindings": [
      {
        "command": "code-sticky-note.open",
        "key": "ctrl+1",
        "mac": "cmd+1",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-sticky-note",
          "title": "code-sticky-note",
          "icon": "media/sample.svg"
        }
      ]
    },
    "views": {
      "code-sticky-note": [
        {
          "id": "code-sticky-note-view-full",
          "name": "code-sticky-note"
        },
        {
          "id": "code-sticky-note-view-current",
          "name": "code-sticky-note (Only Current)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "code-sticky-note-view",
        "contents": "Please init code sticky note json file.\n[Initialize](command:code-sticky-note.init)\n"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "code-sticky-note.open",
          "group": "code-sticky-note@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "ts-loader": "^9.5.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.6"
  }
}
